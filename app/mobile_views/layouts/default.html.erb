<%= content_for(:head) do javascript_tag do %>
$(document).ready(function () {
  var n = $('.navbar');
  var t = $('#menuToggle');
  var showToggle = function() { n.hide(); t.show(); };
  var showNavbar = function() { t.hide(); n.show(); };
  t.bind('click', showNavbar);
  n.bind('mouseout', showToggle);
  n.bind('mouseover', showNavbar);
});
<% end end %>
<%= content_for(:head) do %>
<style type="text/css">
html, body {
	margin: 0px;
	padding: 0px;
	height: 100%;
}
#map, #map_canvas, #viewer {
	height: 100%;
	left: 0px;
	position: absolute;
	top: 0px;
	width: 100%;
	z-index: 0;
}
#menuToggle {
	background: black;
	border-bottom-left-radius: 10px;
	border-bottom-right-radius: 10px;
	color: white;
	cursor: pointer;
	height: 1.5em;
	left: 50%;
	margin-left: -3em;
	position: absolute;
	text-align: center;
	top: 0px;
	width: 6em;
	z-index: 1;
}
.navbar {
	display: none;
}
</style>
<% end %>
<%= content_for(:content) do %>
<div id="menuToggle">maphub</div>
<% end %>
